import React, { useState } from 'react'
import africaMap from './assets/map_africa.png'
import Plane from './plane.tsx'
import { useContext } from 'react';

export const Context = React.createContext()

function App() {

// 480p resolution
resolution = [640, 480]
const [masterSize, setMasterSize] = useState(window.innerWidth)

  return (
    <Context.Provider value={[masterSize, setMasterSize]}>
      <div className="flex mt-5 relative z-0">
        <div className="flex-auto overflow-hidden w-2/3">
          <Plane width="75"/>
          <img src={africaMap} className="scale-150"/>
        </div>
      </div>
    </Context.Provider>
  )
}

export default App
